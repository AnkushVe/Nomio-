{
  "version": 2,
  "name": "nomio-travel-planner",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/server.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "GOOGLE_MAPS_API_KEY": "@google_maps_api_key",
      "GEMINI_API_KEY": "@gemini_api_key",
      "PORT": "5002"
    }
  }
}
